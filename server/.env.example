# =====================================================
# Seoul Bike Sharing Platform - Environment Variables
# =====================================================
# Copy this file to .env and fill in your values
# IMPORTANT: Never commit .env to version control!
# =====================================================

# Server Configuration
NODE_ENV=development
PORT=3000
API_PREFIX=/api

# Database Configuration (MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=seoul_bike_sharing
DB_CONNECTION_LIMIT=10

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_refresh_token_secret_change_this
JWT_REFRESH_EXPIRES_IN=30d

# Bcrypt Password Hashing
BCRYPT_ROUNDS=10

# CORS Configuration
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
LOG_FORMAT=dev

# File Upload (if needed later)
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880

# Email Configuration (optional for future)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# EMAIL_FROM=noreply@seoul-bike.com
