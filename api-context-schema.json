    "dataFlow": {
      "pattern": "Unidirectional data flow via props",
      "globalState": {
        "owner": "App.tsx",
        "variables": {
          "user": {
            "type": "User | null",
            "flow": "App → Navbar, HomePage, MyPage, BoardPage, RepairPage",
            "updates": "Login/Logout only"
          },
          "currentRental": {
            "type": "Rental | null",
            "flow": "App → HomePage, Navbar",
            "updates": "Rent bike (HomePage) / Return bike (Navbar or StationDetail)"
          },
          "currentPage": {
            "type": "'home' | 'mypage' | 'board' | 'repair' | 'admin' | 'route' | 'aicourserecommend'",
            "flow": "App → Navbar (display) / App → conditional page render",
            "updates": "Navigation button clicks in Navbar"
          }
        }
      },
      "localState": {
        "pattern": "Each page component manages its own state",
        "examples": {
          "HomePage": ["viewMode", "searchTerm", "selectedDistrict", "bikeFilter", "selectedStation", "stations"],
          "MyPage": ["activeTab"],
          "BoardPage": ["selectedPostId", "isWriting"],
          "RepairPage": ["activeView"],
          "AdminPage": ["activeTab"]
        }
      },
      "callbackPattern": {
        "description": "Child components receive callbacks to update parent state",
        "examples": {
          "onRent": "HomePage → App.tsx (updates currentRental)",
          "onPageChange": "Navbar → App.tsx (updates currentPage)",
          "onLoginRequired": "HomePage/RepairPage → App.tsx (shows login modal)",
          "onLogin": "LoginModal → App.tsx (updates user)",
          "onLogout": "Navbar → App.tsx (clears user)"
        }
      }
    }
  },

